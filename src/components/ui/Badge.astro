---
export interface BadgeProps {
  variant?: "default" | "secondary" | "destructive" | "outline";
  class?: string;
}

const { variant = "default", class: className } = Astro.props as BadgeProps;
---

<div
  class={`inline-flex items-center rounded-md border border-transparent px-2 py-1 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 ${
    {
      default:
        "bg-accent-primary text-background-base hover:bg-accent-primary/80",
      secondary:
        "bg-background-elevated text-text-primary hover:bg-background-elevated/50",
      destructive: "bg-danger text-background-base hover:bg-danger/80",
      outline:
        "border-border! border text-text-primary hover:bg-background-elevated/50",
    }[variant]
  } ${className}`}
  {...Astro.props}
>
  <slot />
</div>

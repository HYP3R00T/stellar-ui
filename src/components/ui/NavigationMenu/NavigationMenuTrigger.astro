---
export interface Props {
  id: string;
}
const { id } = Astro.props;
---

<button
  class="group relative inline-flex h-9 w-max items-center justify-center rounded-md bg-background px-4 py-2 text-sm font-medium text-foreground transition-colors hover:bg-muted focus:bg-muted-foreground focus:outline-none"
  aria-haspopup="true"
  aria-expanded="false"
  data-menu-trigger={id}
>
  <slot />
  <svg
    class="ml-2 w-4 h-4 transition duration-300"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <path d="M6 9l6 6 6-6"></path>
  </svg>
</button>

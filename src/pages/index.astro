---
import CoreLayout from "@/layouts/CoreLayout.astro";

import Alert from "@/components/ui/Alert.astro";
import Breadcrumb from "@/components/ui/Breadcrumb/Breadcrumb.astro";
import BreadcrumbItem from "@/components/ui/Breadcrumb/BreadcrumbItem.astro";
import BreadcrumbLink from "@/components/ui/Breadcrumb/BreadcrumbLink.astro";
import BreadcrumbSeparator from "@/components/ui/Breadcrumb/BreadcrumbSeparator.astro";
---

<CoreLayout
  hide_toc={true}
  hide_edit_on_gitHub={true}
  hide_view_on_gitHub={true}
>
  This is a playground
  <section class="space-y-4 w-full">
    <h1>Something nice</h1>
  </section>
  <section class="space-y-4 w-full">
    <Breadcrumb>
      <BreadcrumbItem>
        <BreadcrumbLink href="/">Home</BreadcrumbLink>
      </BreadcrumbItem>
      <BreadcrumbSeparator />
      <BreadcrumbItem>
        <BreadcrumbLink href="/playground">Playground</BreadcrumbLink>
      </BreadcrumbItem>
      <BreadcrumbSeparator />
      <BreadcrumbItem>Current Page</BreadcrumbItem>
    </Breadcrumb>

    <Alert variant="warning">
      This operation could result in data loss. Proceed with caution!
    </Alert>

    <Alert variant="success" title="All good!" icon="rss">
      You've completed all the steps successfully.
    </Alert>
  </section>
</CoreLayout>
